@inject ICategoryService CategoryService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject ISyncLocalStorageService LocalStorage
@implements IDisposable


<div class="site-header header-3  d-none d-lg-block">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <ul class="header-top-list">
                    <li>
                        <a href="javascript:void(0)"><i class="icons-left fas fa-random"></i>My Compare</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)"><i class="icons-left fas fa-phone"></i> Contact</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-8 flex-lg-right">
                <ul class="header-top-list">
                    <li class="dropdown-trigger language-dropdown">
                        <a href="javascript:void(0)">
                            <i class="icons-left fas fa-heart"></i>
                            wishlist (0)
                        </a>
                    </li>
                    <AuthorizeView>
                        <Authorized>
                            <li class="dropdown-trigger language-dropdown">
                                <a href="/profile">
                                    <i class="icons-left fas fa-user"></i>
                                    My Account
                                </a>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                    <li>
                        <a href="/checkout"><i class="icons-left fas fa-share"></i> Checkout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="header-middle pt--10 pb--10">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3">
                    <HomeButton />
                </div>
                <div class="col-lg-5">
                    <Search />
                </div>
                <div class="col-lg-4">
                    <div class="main-navigation flex-lg-right">
                        <div class="cart-widget">
                            <div class="login-block">
                                <AuthorizeView>
                                    <Authorized>
                                        <a class="font-weight-bold"><i class="fas fa-sign-out-alt"></i><UserButton /> </a>
                                    </Authorized>
                                    <NotAuthorized>
                                        <a href="/login" class="font-weight-bold">Login</a> <br>
                                        <span>or</span><a href="/register">Register</a>
                                    </NotAuthorized>
                                </AuthorizeView>
                            </div>
                            <div class="cart-block">
                                <CartCounter />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3">
                    <nav class="category-nav   ">
                        <div>
                            <a href="javascript:void(0)" class="category-trigger">
                                <i class="fa fa-bars"></i>Browse
                                categories
                            </a>
                            <ul class="category-menu">
                                @foreach (var category in CategoryService.Categories)
                                {
                                    <li class="cat-item"><a href="@category.Url">@category.Name</a></li>
                                }
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header-phone ">
                        <div class="icon">
                            <i class="fas fa-headphones-alt"></i>
                        </div>
                        <div class="text">
                            <p>Free Support 24/7</p>
                            <p class="font-weight-bold number">+01-202-555-0181</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="main-navigation flex-lg-right">
                        <ul class="main-menu menu-right li-last-0">
                            <li class="menu-item">
                                <NavLink class="nav-link" @onclick="GoToHome" Match="NavLinkMatch.All">
                                    home
                                </NavLink>
                            </li>
                            <!-- Shop -->
                            <li class="menu-item">
                                <NavLink class="nav-link" href="/shop">
                                    shop
                                </NavLink>
                            </li>
                            <!-- Blog -->
                            <li class="menu-item">
                                <a href="/blog">
                                    Blog
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/faq">
                                    Faq 
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-mobile-menu">
    <header class="mobile-header d-block d-lg-none pt--10 pb-md--10">
        <div class="container">
            <div class="row align-items-sm-end align-items-center">
